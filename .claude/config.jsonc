{
  // Режим автопилота - автоматически подтверждать все действия
  "auto_accept": true,
  
  // Продолжать работу даже при ошибках  
  "continue_on_error": true,
  
  // Режим разрешений - разрешить все
  "defaultMode": "permissive",
  
  // Подробный вывод для отладки
  "verbose": true,
  
  // Сохранять историю команд в проекте
  "save_history": true,
  
  // Исключить из обработки
  "exclude_patterns": [
    ".git",           // Git репозиторий
    "__pycache__",    // Кэш Python
    "*.pyc"          // Скомпилированные Python файлы
    // "data/*.parquet"  // Большие файлы данных
  ],
  
  // Обрабатывать только эти файлы
  "include_patterns": [
    "*.py",    // Python скрипты
    "*.json",  // JSON конфиги
    "*.md",    // Markdown документы
    "*.txt"    // Текстовые файлы
  ],

  // ========== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ==========
  
  // Автоматические обновления
  // "autoUpdates": true,
  
  // Метод уведомлений (iterm2, iterm2_with_bell, terminal_bell, notifications_disabled)
  "preferredNotifChannel": "terminal_bell",
  
  // Тема интерфейса (dark, light, light-daltonized, dark-daltonized)
  // "theme": "dark",
  
  // Период очистки истории чатов (в днях)
  // "cleanupPeriodDays": 30,
  
  // Переменные окружения
  "env": {
    "CLAUDE_AUTO_CONTEXT_MANAGER": "true",
    "CLAUDE_CONTEXT_LIMIT": "10000"
  },
  
  // Включать "co-authored-by Claude" в git коммиты
  // "includeCoAuthoredBy": true,
  
  // Переопределить модель AI
  // "model": "claude-3-5-sonnet-20241022",
  
  // Режим разрешений по умолчанию
  // "defaultMode": "strict",
  
  // Дополнительные рабочие директории
  // "additionalDirectories": [
  //   "/path/to/other/project"
  // ],
  
  // Настройки разрешений - разрешить все автоматически
  "permissions": {
    "allow": [
      "read:*",
      "write:*", 
      "bash:*",
      "edit:*",
      "create:*",
      "delete:*"
    ]
  },
  
  // Хуки для выполнения команд - автоматически предлагать агентов
  "hooks": {
    "user-prompt-submit": "echo 'Анализируем задачу для выбора подходящего агента...'",
    "beforeEdit": "echo 'Редактируем файл...'",
    "afterBash": "echo 'Команда выполнена'"
  }
  
  // Кастомная строка статуса
  // "statusLine": {
  //   "enabled": true,
  //   "format": "Project: {project} | Branch: {branch}"
  // },
  
  // Принудительный метод входа (claude_ai или console)
  // "forceLoginMethod": "claude_ai",
  
  // Скрипт для генерации API ключа
  // "apiKeyHelper": "/path/to/auth/script.sh",
  
  // MCP серверы (для корпоративных настроек)
  // "enableAllProjectMcpServers": false,
  // "enabledMcpjsonServers": ["server1", "server2"],
  // "disabledMcpjsonServers": ["server3"]
}