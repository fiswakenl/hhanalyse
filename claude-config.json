{
  // Основные настройки автоматизации
  "auto_accept": true,                    // Автоматически подтверждать все действия без запроса
  "continue_on_error": true,              // Продолжать выполнение при ошибках
  "batch_mode": false,                    // Режим пакетной обработки команд
  "assume_yes": false,                    // Отвечать "да" на все вопросы
  "dry_run": false,                       // Только показать что будет сделано, не выполнять
  "force": false,                         // Принудительное выполнение операций

  // Настройки вывода и логирования
  "verbose": false,                       // Подробный вывод информации
  "debug": false,                         // Режим отладки с дополнительной информацией
  "quiet": false,                         // Тихий режим (минимум вывода)
  "no_color": false,                      // Отключить цветной вывод в терминале
  "log_level": "info",                    // Уровень логирования (debug, info, warn, error)
  "log_file": null,                       // Файл для сохранения логов

  // Настройки модели и API
  "model": "claude-3-sonnet",             // Модель Claude для использования
  "provider": "anthropic",                // Провайдер API (anthropic, openai)
  "max_tokens": 8192,                     // Максимальное количество токенов в ответе
  "temperature": 0.7,                     // Творческость ответов (0.0-1.0)
  "stream": true,                         // Потоковая передача ответов
  "api_key": null,                        // API ключ (лучше через переменную окружения)
  "base_url": null,                       // Базовый URL API
  "organization": null,                   // Идентификатор организации
  "project": null,                        // Идентификатор проекта

  // Настройки времени выполнения
  "timeout": 300,                         // Таймаут запросов в секундах
  "retry_attempts": 3,                    // Количество попыток при ошибках

  // Настройки файлов и директорий
  "working_directory": null,              // Рабочая директория (null = текущая)
  "exclude_patterns": [                   // Исключить файлы/папки из обработки
    ".git", 
    "node_modules", 
    "__pycache__", 
    "*.pyc",
    "*.log",
    "dist",
    "build"
  ],
  "include_patterns": [                   // Включить только эти типы файлов
    "*.py", 
    "*.js", 
    "*.ts", 
    "*.jsx", 
    "*.tsx",
    "*.html",
    "*.css",
    "*.json",
    "*.md"
  ],

  // Настройки инструментов
  "editor": "code",                       // Редактор по умолчанию (code, vim, nano)
  "diff_tool": "diff",                    // Инструмент для сравнения файлов
  "pager": "less",                        // Инструмент для постраничного просмотра
  "shell": "bash",                        // Оболочка командной строки

  // Настройки истории и кэширования
  "save_history": true,                   // Сохранять историю команд
  "history_limit": 1000,                  // Максимальное количество записей в истории
  "cache_size": 100,                      // Размер кэша в МБ
  "cache_ttl": 3600,                      // Время жизни кэша в секундах

  // Настройки резервного копирования
  "backup_count": 5,                      // Количество резервных копий файлов
  "compress_backups": true,               // Сжимать резервные копии

  // Настройки вывода
  "format": "json",                       // Формат вывода (json, yaml, text)
  "output_file": null,                    // Файл для сохранения результатов

  // Хуки - команды, выполняемые в определенные моменты
  "hooks": {
    "pre_command": null,                  // Команда перед выполнением основной команды
    "post_command": null,                 // Команда после выполнения основной команды
    "on_error": null                      // Команда при возникновении ошибки
  }
}